<h1>Contact Page</h1>

<% if params[:user].present? %>
Hi <%= params[:user] %>, thank you for contact us. We will get back to you shortly
<% end %>
<%= form_tag contact_submit_path do%>
  <div class="">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div>
<%# will generates a submit button for the form with label 'Contact Us' %>
  <%= submit_tag 'Contact Us' %>
<% end %>
